<div id='carousel'>
  <div id='carouselItems'>
    <!-- TODO: We will reuse this to display list of recipes -->
    <% @recipes.each do |recipe| %>
      <div class='carouselItem' data-id='1'>
        <div class='content'>
          <%= link_to recipe do %>
            <h2 class='recipeTitle'><%= render :partial => 'recipes/title', :locals => { :recipe => recipe } %></h2>
            <div class='images'>
              <div class='recipeImage'><%= image_tag recipe.primary_photo.image.medium.url if recipe.primary_photo %></div>
              <div class='recipeSecondaryImage'><%= image_tag recipe.secondary_photo.image.small.url if recipe.secondary_photo %></div>
            </div>
          <% end %>
          <p class='recipeSynopsis'><%= recipe.synopsis %></p>
          <div class='recipeLinks'>
            <%= link_to 'view all recipes', recipes_path, :class => 'recipesMoreLink' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



