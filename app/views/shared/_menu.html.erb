<nav id='banner'>
  <div class='container'>
    <nav id="menu">
      <ul>
        <li><%= image_tag 'menu_logo.png', :class => 'logo' %></li>
        <li class='mobile'><%= link_to 'Home', "#{root_path}#header", :'data-section' => :home %></li>
        <li class='mobile'><%= link_to 'Recipes', "#{root_path}#recipesPanel" %></li>
        <li class='mobile'><%= link_to 'News', "#{root_path}#newsPanel", :'data-section' => :news %></li>
        <li class='mobile'><%= link_to 'Contact', "#{root_path}#contactPanel", :'data-section' => :contact %></li>
        <li class='mobile'><%= link_to 'Blog', blog_posts_path, :'data-section' => :blog_posts %></li>
        <li class='searchMenuItem'>
          <%= form_tag search_recipes_path, :method => 'get' do %>
            <%= text_field_tag 'search', nil, :placeholder => 'Search by ingredient or recipe', :class => :hidden %>
          <% end %>
          <%= link_to '#', :class => 'search_menu_item' do %>
            <span class='icon-search icon'></span>
          <% end %>
          <%= link_to 'All Recipes', recipes_path, :class => 'allRecipes', :'data-section' => :recipes %>
        </li>
        <li class='right'>
          <% if user_signed_in? %>
            <%= link_to 'Logout', destroy_user_session_path, :'data-section' => :login, :method => 'delete' %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, :'data-section' => :login %>
          <% end %>
        </li>
      </ul>
    </nav>
    <nav id="mobile_menu">
      <%= link_to root_path do %>
        <%= image_tag 'footer_logo.png', :class => 'logo' %>
      <% end %>
      <ul>
        <li>
          <a class='icon icon-search' href='#'></a>
        </li>
        <li>
          <a class='icon icon-reorder' href='#'></a>
        </li>
      </ul>
      <div id="mobile_popup"></div>
      <div id="mobile_search"></div>
    </nav>
    <% if flash[:notice] %>
      <p class='notice'><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class='error'><%= flash[:error] %></p>
    <% end %>
  </div>
</nav>
